---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import CourseCard from '../../components/CourseCard.astro';
import PhotoGallery from '../../components/PhotoGallery.astro';
import ReviewsSection from '../../components/ReviewsSection.astro';
import { courses, getRelatedCourses } from '../../data/courses';

export async function getStaticPaths() {
  return courses.map(course => ({
    params: { slug: course.slug },
    props: { course }
  }));
}

const { course } = Astro.props;
const { slug } = Astro.params;

const relatedCourses = getRelatedCourses(course.id, 3);

const renderStars = (rating: number) => {
  const fullStars = Math.floor(rating);
  const hasHalfStar = rating % 1 >= 0.5;
  const stars = [];
  
  for (let i = 0; i < fullStars; i++) {
    stars.push('full');
  }
  
  if (hasHalfStar) {
    stars.push('half');
  }
  
  while (stars.length < 5) {
    stars.push('empty');
  }
  
  return stars;
};

const stars = renderStars(course.rating);
const reviewCount = Math.floor(Math.random() * 100) + 15;
---

<BaseLayout 
  title={`${course.name} - Mini Golf Course in ${course.city}, ${course.state}`}
  description={`${course.description} Located in ${course.city}, ${course.state}. Rating: ${course.rating}/5 stars. Price range: ${course.priceRange}.`}
>
  <Header />
  
  <main>
    <!-- Breadcrumb -->
    <nav class="bg-gray-50 py-4" aria-label="Breadcrumb">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center space-x-2 text-sm text-gray-600">
          <a href="/" class="hover:text-emerald-600">Home</a>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
          <a href="/courses" class="hover:text-emerald-600">Courses</a>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
          <span class="text-gray-900 font-medium">{course.name}</span>
        </div>
      </div>
    </nav>
    
    <!-- Hero Section -->
    <section class="py-12 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Course Photos -->
          <div class="order-2 lg:order-1">
            <PhotoGallery photos={course.photos} courseName={course.name} />
          </div>
          
          <!-- Course Info -->
          <div class="order-1 lg:order-2">
            <div class="mb-4">
              <span class="inline-block bg-emerald-100 text-emerald-800 text-sm font-medium px-3 py-1 rounded-full">
                Featured Course
              </span>
            </div>
            
            <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
              {course.name}
            </h1>
            
            <!-- Rating -->
            <div class="flex items-center mb-6">
              <div class="flex items-center space-x-1 mr-3">
                {stars.map((star) => (
                  star === 'full' ? (
                    <svg class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 24 24">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  ) : star === 'half' ? (
                    <svg class="w-5 h-5 text-yellow-400" viewBox="0 0 24 24">
                      <defs>
                        <linearGradient id="half-star">
                          <stop offset="50%" stop-color="currentColor"/>
                          <stop offset="50%" stop-color="#e5e7eb"/>
                        </linearGradient>
                      </defs>
                      <path fill="url(#half-star)" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  ) : (
                    <svg class="w-5 h-5 text-gray-300 fill-current" viewBox="0 0 24 24">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  )
                ))}
              </div>
              <span class="text-lg font-semibold text-gray-900 mr-2">{course.rating}</span>
              <span class="text-gray-600">({course.reviewCount} reviews)</span>
            </div>
            
            <!-- Location -->
            <div class="flex items-start mb-6">
              <svg class="w-5 h-5 text-gray-400 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <div>
                <p class="font-medium text-gray-900">{course.address}</p>
                <p class="text-gray-600">{course.city}, {course.state} {course.zipCode}</p>
              </div>
            </div>
            
            <!-- Description -->
            <div class="mb-8">
              <h2 class="text-xl font-semibold text-gray-900 mb-3">About This Course</h2>
              <p class="text-gray-700 leading-relaxed">{course.description}</p>
            </div>
            
            <!-- Features & Amenities -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-3">Course Features</h3>
                <div class="space-y-2">
                  {course.features.map(feature => (
                    <div class="flex items-center">
                      <svg class="w-4 h-4 text-emerald-600 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                      </svg>
                      <span class="text-sm text-gray-700">{feature}</span>
                    </div>
                  ))}
                </div>
              </div>
              
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-3">Amenities</h3>
                <div class="space-y-2">
                  {course.amenities.map(amenity => (
                    <div class="flex items-center">
                      <svg class="w-4 h-4 text-blue-600 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                      </svg>
                      <span class="text-sm text-gray-700">{amenity}</span>
                    </div>
                  ))}
                </div>
              </div>
            </div>
            
            <!-- Contact Actions -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <a 
                href={`tel:${course.phone}`}
                class="flex items-center justify-center px-6 py-3 bg-emerald-600 text-white font-medium rounded-lg hover:bg-emerald-700 transition-colors"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                Call Now
              </a>
              <a 
                href={course.website}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center px-6 py-3 bg-white text-emerald-600 border border-emerald-600 font-medium rounded-lg hover:bg-emerald-50 transition-colors"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
                Visit Website
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Details Section -->
    <section class="py-12 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Hours & Contact -->
          <div class="bg-white rounded-xl p-6 shadow-sm">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Hours & Contact</h3>
            <div class="space-y-4">
              <div>
                <h4 class="font-medium text-gray-900 mb-1">Hours</h4>
                <p class="text-gray-600 text-sm">{course.hours}</p>
              </div>
              <div>
                <h4 class="font-medium text-gray-900 mb-1">Phone</h4>
                <a href={`tel:${course.phone}`} class="text-emerald-600 hover:text-emerald-700 text-sm">
                  {course.phone}
                </a>
              </div>
              <div>
                <h4 class="font-medium text-gray-900 mb-1">Website</h4>
                <a href={course.website} target="_blank" rel="noopener noreferrer" class="text-emerald-600 hover:text-emerald-700 text-sm truncate block">
                  Visit Website
                </a>
              </div>
            </div>
          </div>
          
          <!-- Pricing -->
          <div class="bg-white rounded-xl p-6 shadow-sm">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Pricing</h3>
            <div class="space-y-2">
              <div class="flex justify-between">
                <span class="text-gray-600">Adults:</span>
                <span class="font-semibold text-gray-900">{course.priceRange}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Children:</span>
                <span class="font-semibold text-gray-900">$2-3 off</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Groups:</span>
                <span class="font-semibold text-gray-900">Call for rates</span>
              </div>
            </div>
            <p class="text-xs text-gray-500 mt-4">
              Prices may vary by season. Call for current rates and group discounts.
            </p>
          </div>
          
          <!-- Quick Facts -->
          <div class="bg-white rounded-xl p-6 shadow-sm">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Facts</h3>
            <div class="space-y-3">
              <div class="flex items-center">
                <svg class="w-4 h-4 text-emerald-600 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
                <span class="text-sm text-gray-700">18-hole course</span>
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 text-emerald-600 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
                <span class="text-sm text-gray-700">Family friendly</span>
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 text-emerald-600 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
                <span class="text-sm text-gray-700">Parking available</span>
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 text-emerald-600 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
                <span class="text-sm text-gray-700">Group discounts</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Reviews Section -->
    <section class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <ReviewsSection 
          reviews={course.reviews} 
          rating={course.rating} 
          reviewCount={course.reviewCount} 
        />
      </div>
    </section>
    
    <!-- Related Courses -->
    {relatedCourses.length > 0 && (
      <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
            You Might Also Like
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {relatedCourses.map(relatedCourse => (
              <CourseCard course={relatedCourse} />
            ))}
          </div>
        </div>
      </section>
    )}
  </main>
  
  <Footer />
</BaseLayout>

<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "TouristAttraction",
  "name": course.name,
  "description": course.description,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": course.address,
    "addressLocality": course.city,
    "addressRegion": course.state,
    "postalCode": course.zipCode,
    "addressCountry": "US"
  },
  "telephone": course.phone,
  "url": course.website,
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": course.rating,
    "ratingCount": reviewCount,
    "bestRating": 5
  },
  "priceRange": course.priceRange,
  "amenityFeature": course.features.map(feature => ({
    "@type": "LocationFeatureSpecification",
    "name": feature
  }))
})} />
</BaseLayout>