---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const pageTitle = 'Submit a Course - Minigolf.directory';
const pageDescription = 'Add your mini golf course to our directory and reach thousands of enthusiasts looking for their next adventure.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-emerald-500 to-blue-600 text-white py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-3xl sm:text-4xl font-bold mb-4">
          Submit Your Mini Golf Course
        </h1>
        <p class="text-xl text-emerald-100 mb-8">
          Join our directory and reach thousands of mini golf enthusiasts looking for their next adventure.
        </p>
        <div class="bg-white bg-opacity-10 rounded-lg p-6 max-w-2xl mx-auto">
          <div class="grid grid-cols-3 gap-4 text-center">
            <div>
              <div class="text-2xl font-bold">25+</div>
              <div class="text-sm text-emerald-100">Courses Listed</div>
            </div>
            <div>
              <div class="text-2xl font-bold">10K+</div>
              <div class="text-sm text-emerald-100">Monthly Visitors</div>
            </div>
            <div>
              <div class="text-2xl font-bold">Free</div>
              <div class="text-sm text-emerald-100">Always</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Form Section -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-xl shadow-sm p-8">
          <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-2">Course Information</h2>
            <p class="text-gray-600">
              Please provide detailed information about your mini golf course. All fields marked with * are required.
            </p>
          </div>

          <form class="space-y-6" action="#" method="POST">
            <!-- Basic Information -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                  Course Name *
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                  placeholder="e.g., Adventure Golf Paradise"
                />
              </div>
              
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                  Phone Number *
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                  placeholder="(555) 123-4567"
                />
              </div>
            </div>

            <!-- Address -->
            <div>
              <label for="address" class="block text-sm font-medium text-gray-700 mb-2">
                Street Address *
              </label>
              <input
                type="text"
                id="address"
                name="address"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                placeholder="123 Main Street"
              />
            </div>

            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
              <div>
                <label for="city" class="block text-sm font-medium text-gray-700 mb-2">
                  City *
                </label>
                <input
                  type="text"
                  id="city"
                  name="city"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                  placeholder="Orlando"
                />
              </div>
              
              <div>
                <label for="state" class="block text-sm font-medium text-gray-700 mb-2">
                  State *
                </label>
                <select
                  id="state"
                  name="state"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                >
                  <option value="">Select State</option>
                  <option value="FL">Florida</option>
                  <option value="CA">California</option>
                  <option value="TX">Texas</option>
                  <option value="NY">New York</option>
                  <option value="PA">Pennsylvania</option>
                  <option value="OH">Ohio</option>
                  <option value="NC">North Carolina</option>
                  <option value="SC">South Carolina</option>
                  <option value="VA">Virginia</option>
                  <option value="TN">Tennessee</option>
                  <option value="GA">Georgia</option>
                  <option value="NV">Nevada</option>
                  <option value="AZ">Arizona</option>
                  <option value="WA">Washington</option>
                  <option value="OR">Oregon</option>
                </select>
              </div>
              
              <div>
                <label for="zipCode" class="block text-sm font-medium text-gray-700 mb-2">
                  ZIP Code *
                </label>
                <input
                  type="text"
                  id="zipCode"
                  name="zipCode"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                  placeholder="32819"
                />
              </div>
            </div>

            <!-- Course Details -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="holeCount" class="block text-sm font-medium text-gray-700 mb-2">
                  Number of Holes *
                </label>
                <select
                  id="holeCount"
                  name="holeCount"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                >
                  <option value="">Select</option>
                  <option value="9">9 holes</option>
                  <option value="18">18 holes</option>
                  <option value="27">27 holes</option>
                  <option value="36">36 holes</option>
                </select>
              </div>
              
              <div>
                <label for="priceRange" class="block text-sm font-medium text-gray-700 mb-2">
                  Price Range *
                </label>
                <select
                  id="priceRange"
                  name="priceRange"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                >
                  <option value="">Select Price Range</option>
                  <option value="$">$ (Under $13)</option>
                  <option value="$$">$$ ($13-17)</option>
                  <option value="$$$">$$$ ($18+)</option>
                </select>
              </div>
            </div>

            <!-- Description -->
            <div>
              <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                Course Description *
              </label>
              <textarea
                id="description"
                name="description"
                required
                rows="4"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                placeholder="Describe your mini golf course, its theme, unique features, and what makes it special..."
              ></textarea>
            </div>

            <!-- Website & Hours -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="website" class="block text-sm font-medium text-gray-700 mb-2">
                  Website URL
                </label>
                <input
                  type="url"
                  id="website"
                  name="website"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                  placeholder="https://yourwebsite.com"
                />
              </div>
              
              <div>
                <label for="hours" class="block text-sm font-medium text-gray-700 mb-2">
                  Operating Hours
                </label>
                <input
                  type="text"
                  id="hours"
                  name="hours"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                  placeholder="Mon-Sun: 10am-10pm"
                />
              </div>
            </div>

            <!-- Features -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-3">
                Course Features (Select all that apply)
              </label>
              <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
                <label class="flex items-center">
                  <input type="checkbox" name="features" value="Water Features" class="text-emerald-600 focus:ring-emerald-500" />
                  <span class="ml-2 text-sm text-gray-700">Water Features</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="features" value="Windmills" class="text-emerald-600 focus:ring-emerald-500" />
                  <span class="ml-2 text-sm text-gray-700">Windmills</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="features" value="Caves/Tunnels" class="text-emerald-600 focus:ring-emerald-500" />
                  <span class="ml-2 text-sm text-gray-700">Caves/Tunnels</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="features" value="Moving Obstacles" class="text-emerald-600 focus:ring-emerald-500" />
                  <span class="ml-2 text-sm text-gray-700">Moving Obstacles</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="features" value="Themed Decor" class="text-emerald-600 focus:ring-emerald-500" />
                  <span class="ml-2 text-sm text-gray-700">Themed Decor</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="features" value="Landscaping" class="text-emerald-600 focus:ring-emerald-500" />
                  <span class="ml-2 text-sm text-gray-700">Landscaping</span>
                </label>
              </div>
            </div>

            <!-- Amenities -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-3">
                Available Amenities (Select all that apply)
              </label>
              <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
                <label class="flex items-center">
                  <input type="checkbox" name="amenities" value="Parking" class="text-emerald-600 focus:ring-emerald-500" />
                  <span class="ml-2 text-sm text-gray-700">Parking</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="amenities" value="Restrooms" class="text-emerald-600 focus:ring-emerald-500" />
                  <span class="ml-2 text-sm text-gray-700">Restrooms</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="amenities" value="Snack Bar" class="text-emerald-600 focus:ring-emerald-500" />
                  <span class="ml-2 text-sm text-gray-700">Snack Bar</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="amenities" value="Gift Shop" class="text-emerald-600 focus:ring-emerald-500" />
                  <span class="ml-2 text-sm text-gray-700">Gift Shop</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="amenities" value="Birthday Parties" class="text-emerald-600 focus:ring-emerald-500" />
                  <span class="ml-2 text-sm text-gray-700">Birthday Parties</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="amenities" value="Group Rates" class="text-emerald-600 focus:ring-emerald-500" />
                  <span class="ml-2 text-sm text-gray-700">Group Rates</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="amenities" value="Air Conditioning" class="text-emerald-600 focus:ring-emerald-500" />
                  <span class="ml-2 text-sm text-gray-700">Air Conditioning</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="amenities" value="Wheelchair Accessible" class="text-emerald-600 focus:ring-emerald-500" />
                  <span class="ml-2 text-sm text-gray-700">Wheelchair Accessible</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="amenities" value="Arcade" class="text-emerald-600 focus:ring-emerald-500" />
                  <span class="ml-2 text-sm text-gray-700">Arcade</span>
                </label>
              </div>
            </div>

            <!-- Contact Information -->
            <div class="bg-gray-50 rounded-lg p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Contact Information</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="contactName" class="block text-sm font-medium text-gray-700 mb-2">
                    Your Name *
                  </label>
                  <input
                    type="text"
                    id="contactName"
                    name="contactName"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                    placeholder="John Smith"
                  />
                </div>
                
                <div>
                  <label for="contactEmail" class="block text-sm font-medium text-gray-700 mb-2">
                    Your Email *
                  </label>
                  <input
                    type="email"
                    id="contactEmail"
                    name="contactEmail"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                    placeholder="john@example.com"
                  />
                </div>
              </div>
              
              <div class="mt-4">
                <label for="contactRole" class="block text-sm font-medium text-gray-700 mb-2">
                  Your Role
                </label>
                <select
                  id="contactRole"
                  name="contactRole"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                >
                  <option value="">Select your role</option>
                  <option value="owner">Owner</option>
                  <option value="manager">Manager</option>
                  <option value="employee">Employee</option>
                  <option value="other">Other</option>
                </select>
              </div>
            </div>

            <!-- Additional Notes -->
            <div>
              <label for="notes" class="block text-sm font-medium text-gray-700 mb-2">
                Additional Notes
              </label>
              <textarea
                id="notes"
                name="notes"
                rows="3"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                placeholder="Any additional information you'd like to share about your course..."
              ></textarea>
            </div>

            <!-- Agreement -->
            <div class="bg-emerald-50 rounded-lg p-6">
              <div class="flex items-start">
                <input
                  type="checkbox"
                  id="agreement"
                  name="agreement"
                  required
                  class="mt-1 text-emerald-600 focus:ring-emerald-500"
                />
                <label for="agreement" class="ml-3 text-sm text-gray-700">
                  I confirm that I have the authority to submit this course information and agree to the terms of service. 
                  I understand that the information will be reviewed before being added to the directory. 
                  All information provided is accurate to the best of my knowledge. *
                </label>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="flex flex-col sm:flex-row gap-4 pt-6">
              <button
                type="submit"
                class="flex-1 bg-emerald-600 text-white font-medium py-3 px-6 rounded-lg hover:bg-emerald-700 transition-colors shadow-sm"
              >
                Submit Course for Review
              </button>
              <button
                type="reset"
                class="px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors"
              >
                Clear Form
              </button>
            </div>
          </form>
        </div>
      </div>
    </section>

    <!-- What Happens Next Section -->
    <section class="py-12 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-gray-900 text-center mb-8">What Happens Next?</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="bg-emerald-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">1. Review</h3>
            <p class="text-gray-600">
              Our team will review your submission within 2-3 business days to ensure accuracy and completeness.
            </p>
          </div>
          
          <div class="text-center">
            <div class="bg-emerald-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">2. Contact</h3>
            <p class="text-gray-600">
              We'll email you with any questions or to confirm your listing details before going live.
            </p>
          </div>
          
          <div class="text-center">
            <div class="bg-emerald-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">3. Go Live</h3>
            <p class="text-gray-600">
              Your course will be added to our directory and start appearing in search results immediately.
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>

<script>
  // Form validation and UX improvements
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.querySelector('form');
    const submitButton = form?.querySelector('button[type="submit"]');
    
    // Form submission handler
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      
      // Show loading state
      if (submitButton) {
        const originalText = submitButton.textContent;
        submitButton.textContent = 'Submitting...';
        submitButton.disabled = true;
        
        // Simulate API call
        setTimeout(() => {
          alert('Thank you! Your course submission has been received. We\'ll review it and get back to you within 2-3 business days.');
          form.reset();
          submitButton.textContent = originalText;
          submitButton.disabled = false;
        }, 1500);
      }
    });
    
    // Auto-format phone number
    const phoneInput = document.getElementById('phone');
    phoneInput?.addEventListener('input', (e) => {
      const target = e.target as HTMLInputElement;
      let value = target.value.replace(/\D/g, '');
      if (value.length >= 6) {
        value = `(${value.slice(0,3)}) ${value.slice(3,6)}-${value.slice(6,10)}`;
      } else if (value.length >= 3) {
        value = `(${value.slice(0,3)}) ${value.slice(3)}`;
      }
      target.value = value;
    });
    
    // Character count for description
    const descriptionInput = document.getElementById('description') as HTMLTextAreaElement;
    if (descriptionInput) {
      const charCounter = document.createElement('div');
      charCounter.className = 'text-sm text-gray-500 mt-1 text-right';
      descriptionInput.parentElement?.appendChild(charCounter);
      
      const updateCharCount = () => {
        const count = descriptionInput.value.length;
        charCounter.textContent = `${count} characters`;
        if (count < 50) {
          charCounter.className = 'text-sm text-red-500 mt-1 text-right';
        } else if (count < 100) {
          charCounter.className = 'text-sm text-yellow-600 mt-1 text-right';
        } else {
          charCounter.className = 'text-sm text-gray-500 mt-1 text-right';
        }
      };
      
      descriptionInput.addEventListener('input', updateCharCount);
      updateCharCount();
    }
  });
</script>